 <!-- Custom styles for this template -->
    <link href="style.css" rel="stylesheet">

<h2>Login</h2>
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}

 <body class="text-center">
<form class="form-signin" method="POST" action="login">
  
      <h1 class="h3 mb-3 font-weight-normal text-warning">Please sign in</h1>
      <label for="username" class="sr-only" >Username</label>
     
      <input type="text" id="username" name ="username" class="form-control" placeholder="Username" autofocus>


      <label for="password" class="sr-only" >Password</label>
     
      <input type="password" id="inputPassword" name = "password" class="form-control" placeholder="Password">
   

      <button class="btn btn-sm btn-primary btn-block" value="Login" type="submit">Login</button>
     
      
      <button class="btn btn-sm btn-primary btn-block" id="registerBtn" href = "/createAccount">Create An Account</button>
     
  
    </form>

    </body>